{% for number in numbers %}
{% assign numType = 'Phone' %}
{% case numType %}
{% when number.entity.fieldPhoneNumberType == 'fax' %}
{% assign numType = 'Fax' %}
{% when number.entity.fieldPhoneNumberType == 'sms' %}
{% assign numType = 'SMS' %}
{% when number.entity.fieldPhoneNumberType == 'tty' %}
{% assign numType = 'TTY' %}
{% endcase %}

<p class="vads-u-margin-y--1">
  <strong>{{numType}}: </strong><a
    aria-label="{{ number.entity.fieldPhoneNumber | accessibleNumber }}{% if number.entity.fieldPhoneExtension %} extension: {{ number.entity.fieldPhoneExtension | accessibleNumber }}{% endif %}"
    href="tel:{{ number.entity.fieldPhoneNumber }}{% if number.entity.fieldPhoneExtension %}p{{ number.entity.fieldPhoneExtension }}{% endif %}">
    {{ number.entity.fieldPhoneNumber }}{% if number.entity.fieldPhoneExtension %}
    x {{ number.entity.fieldPhoneExtension }}{% endif %}</a>
  {% if number.entity.fieldPhoneLabel %}<br /><span>{{ number.entity.fieldPhoneLabel }}</span>{% endif %}
</p>
{% endfor %}
